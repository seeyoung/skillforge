{
  "$schema": "./skillforge.schema.json",
  "index": {
    "enabled": true,
    "file": "INDEX.md",
    "track": ["*Service.groovy", "*Utils.groovy"],
    "timestampFormat": "YYYY-MM-DD HH:mm"
  },
  "commit": {
    "language": "ko",
    "conventionalCommits": false,
    "coAuthor": "Claude <noreply@anthropic.com>"
  },
  "restart": {
    "port": 8080,
    "command": "./gradlew bootRun",
    "framework": "spring",
    "cacheDir": ["build", ".gradle"],
    "logFile": "logs/dev.log"
  },
  "test": {
    "command": "./gradlew test",
    "coverage": true,
    "coverageThreshold": 80,
    "e2eCommand": "./gradlew e2eTest",
    "setupCommand": "docker-compose up -d",
    "teardownCommand": "docker-compose down"
  },
  "issue": {
    "branchPrefix": {
      "fix": "fix/issue-",
      "feat": "feat/issue-",
      "default": "fix"
    },
    "review": {
      "enabled": true,
      "command": "~/.claude/scripts/ai-collab.sh",
      "maxRounds": 3
    },
    "autoCreateBranch": true,
    "autoClose": true
  },
  "build": {
    "command": "./gradlew build",
    "cleanCommand": "./gradlew clean",
    "prodCommand": "./gradlew build -Pprod",
    "outputDir": "build/libs",
    "preBuildCommand": "./gradlew test",
    "env": {
      "JAVA_OPTS": "-Xmx2g"
    }
  },
  "implement": {
    "framework": "spring",
    "language": "java",
    "tdd": true,
    "qualityGate": "./gradlew qualityGate",
    "srcDir": "src/main/java",
    "testDir": "src/test/java",
    "conventions": {
      "maxMethodLines": 30,
      "maxParams": 5,
      "maxNestingDepth": 2
    }
  },
  "analyze": {
    "lintCommand": "./gradlew checkstyleMain",
    "securityCommand": "./gradlew dependencyCheckAnalyze",
    "qualityCommand": "./gradlew qualityGate",
    "exclude": ["build", ".gradle"],
    "rules": {
      "maxFileLines": 500,
      "maxComplexity": 10
    },
    "security": {
      "enabled": true,
      "dependencyCheck": true
    }
  }
}
